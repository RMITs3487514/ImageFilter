{
	"manifest_version": 2,
	"name": "Image Filter",
	"description": "Applies filters to images on web-pages to improve contrast.",
	"version": "1.0",
	"applications": {
		"gecko": {
			"id": "dontknowwhatgoeshere@mozilla.org"
		}
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon.png"
	},
	"options_page": "options.html",
	"permissions": ["tabs", "storage", "contextMenus", "<all_urls>"],
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"jquery-2.2.0.min.js",
				"mousetrap.min.js",
				"storage.js",
				"imagefinder.js",
				"histogram.js",
				"filter.js",
				"imagefilter.js",
				"content.js"
			],
			"run_at": "document_idle"
		}
	],
	"background": {
		"scripts": ["storage.js", "background.js"]
	}
}
